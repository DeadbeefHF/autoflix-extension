{
	"manifest_version": 2,

	"name": "AutoFlix",
	"version": "1.1.4",
	"description": "Simplifies the access to Netflix for all users.",

	"icons": {
		"16": "icon-16.png",
		"32": "icon-32.png",
		"48": "icon-48.png",
		"64": "icon-64.png" ,
		"128": "icon-128.png"
	},

	"browser_action": {
		"default_icon": "icon-128.png"
	},

	"background": {
		"scripts": ["background.js"]
	},
	"permissions": [
		"contextMenus",
		"cookies",
		"storage",
		"tabs",
		"webNavigation",
		"*://*.netflix.com/*",
		"*://autoflix.deadbeef.me/*"
	],

	"web_accessible_resources": ["contentscript.js"]
}
